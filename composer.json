{
    "name": "rokka/twig",
    "type": "twig-extension",
    "description": "Rokka.io twig extension",
    "keywords": [
        "rokka",
        "rokka.io",
        "image",
        "images",
        "imagemanipulation",
        "twig",
        "twig extension"
    ],
    "homepage": "https://github.com/rokka-io/rokka-client-php-twig",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Stocker",
            "email": "me@chregu.tv",
            "homepage": "http://chregu.tv",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "rokka/client": "^1.3.1",
        "twig/twig": "^2.7 || ^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.81",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "Rokka\\Twig\\": "src/"
        }
    },
    "scripts": {
        "cs:fix": "vendor/bin/php-cs-fixer --ansi fix -v",
        "cs:diff": "vendor/bin/php-cs-fixer --ansi fix --dry-run --diff --diff-format udiff -v",
        "phpstan": "vendor/bin/phpstan --ansi --level=8 analyse src/"
    }
}
